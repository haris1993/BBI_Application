@model BBI.Models.ViewModels.HomeViewModel

@foreach (var package in Model.PackageList.OrderBy(o => o.Name))
{
    @if (Model.ServicePackageList.Where(c=>c.PackageId == package.Id).Count() > 0)
    {
        <div class="row container pb-3 backgroundWhite">
            <div class="col-12">
                <div class="row">
                    <h2 class="text-success"><b>@package.Name</b></h2>

                    <div class="col-12">
                        <div class="row m-3">
                            @foreach (var service in Model.ServicePackageList.Where(c=>c.PackageId == package.Id))
                            {
                                <div class="col-lg-4 col-xl-3 col-md-6 pb-4">
                                    <div class="card" style="border:2px solid #43ac6a; border-radius:5px; background:url('/images/background.png')">
                                        <div class="pl-3 pt-1 text-center">
                                            <h3 class="card-title text-primary"><b>@service.Name</b></h3>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <div class="pl-1 text-muted">Cijena : </div>
                                            <div class="pr-1 text-danger h5">KM @service.Price</div>
                                        </div>
                                        <img src="@service.ImageUrl" class="card-img-top p-2 rounded"/> 
                                        <a asp-action="Details" class="btn btn-success" style="border-radius:2px;" asp-route-id="@service.Id">Detalji</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}